{{>incorrectForm}}
<div class="page-header">
   <h1>List of rooms</h1>
</div>
{{#if rooms}}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Count of people</th>
                <th>Type</th>
                <th>Price/day</th>
                <th>Create date</th>
            </tr>
        </thead>
        <tbody>
            {{#each rooms}}
                <tr>
                    <th class="row">{{this.id}}</th>
                    <td>{{this.number}}</td>
                    <td>{{this.countOfPeople}}</td>
                    <td>{{this.type}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.created}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h3>No rooms are created</h3>
{{/if}}