{{>incorrectForm}}
<div class="page-header">
   <h1>List of services</h1>
</div>
{{#if services}}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Create date</th>
            </tr>
        </thead>
        <tbody>
            {{#each services}}
                <tr>
                    <th class="row">{{this.id}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.created}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h3>No services are created</h3>
{{/if}}